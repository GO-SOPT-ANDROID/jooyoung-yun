<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GOSOPTAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_300</item>
        <item name="colorPrimaryVariant">@color/indigo_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <!--Font theme-->
        <item name="android:textViewStyle">@style/TextAppearance.SuiteRegular</item>
    </style>

    <style name="TextAppearance.Humanbumsuk" parent="">
        <item name="android:fontFamily">@font/human_bumsuk</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SuiteRegular" parent="">
        <item name="android:fontFamily">@font/suite_regular</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>